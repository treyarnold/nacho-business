<h1 class="display-2 text-center my-5">
  <span class="bg-success text-white">Its</span>
  <span class="text-success">Nacho</span>
  <span class="bg-danger text-white">Business!!!</span>
</h1>
<div class="container-fluid pt-3">
  <div class="row">
    <div class="col-md-3 text-center order-2 order-md-1">
      <h2 class="py-3">Tacos Ready for Pickup</h2>
      {{#each tacos}}
        {{#unless this.picked_up}}
          <div class="mb-3 rounded-pill bg-success text-white text-center">
            <p><strong>{{this.name}}</strong></p>
            <form action="/?_method=PUT" method="post"><button name="id" value={{this.id}} type="submit" class="mb-3 btn-info">Pickup</button></form>
            <p>{{this.main_ingredient}} taco in a {{this.shell_type}} torilla with </p>
            <p>{{this.cheese}} and {{this.toppings}}</p>
          </div>
        {{/unless}}
      {{/each}}
    </div>
    
    <div class="col-md-6 order-1 order-md-2">
      <h2 class="py-3 text-center">Create your dream taco</h2>
      <form action="/" method="post">
        <div class="form-group">
          <label for="orderName">What is your name?</label>
          <input type="text" class="form-control" id="orderName" name="orderName" placeholder="Your Name" required>
        </div>
        <div class="form-group">
          <label class="ml-4" for="tortilla">Tortilla:</label>
          <label class="radio-inline ml-2"><input type="radio" name="tortilla" value="flour">Flour</label>
          <label class="radio-inline ml-2"><input type="radio" name="tortilla" value="corn">Corn</label>
          <label class="radio-inline ml-2"><input type="radio" name="tortilla" value="none">None</label>
        </div>
        <div class="form-group">
          <label class="ml-4" for="tortilla">Filling:</label>
          <label class="radio-inline ml-2"><input type="radio" name="mainIngredient" value="ixtapa">Ixtapa</label>
          <label class="radio-inline ml-2"><input type="radio" name="mainIngredient" value="beef fajita">Beef
            Fajita</label>
          <label class="radio-inline ml-2"><input type="radio" name="mainIngredient" value="carnitas">Carnitas</label>
          <label class="radio-inline ml-2"><input type="radio" name="mainIngredient" value="chicken fajita">Chicken
            Fajita</label>
          <label class="radio-inline ml-2"><input type="radio" name="mainIngredient" value="tofu">Tofu</label>
        </div>
        <div class="form-group">
          <label class="ml-4" for="tortilla">Cheese:</label>
          <label class="radio-inline ml-2"><input type="radio" name="cheese" value="cheddar">Cheddar</label>
          <label class="radio-inline ml-2"><input type="radio" name="cheese" value="cotija">Cotija</label>
          <label class="radio-inline ml-2"><input type="radio" name="cheese" value="monterey jack">Monterey Jack</label>
          <label class="radio-inline ml-2"><input type="radio" name="cheese" value="mixed">Mixed</label>
        </div>
        <div class="form-group">
          <label class="ml-4" for="tortilla">Toppings:</label>
          <label class="checkbox-inline ml-2"><input type="checkbox" name="toppings" value="sour cream">Sour
            Cream</label>
          <label class="checkbox-inline ml-2"><input type="checkbox" name="toppings" value="quacamole">Quacamole</label>
          <label class="checkbox-inline ml-2"><input type="checkbox" name="toppings" value="corn">Corn</label>
          <label class="checkbox-inline ml-2"><input type="checkbox" name="toppings" value="cilantro">Cilantro</label>
          <label class="checkbox-inline ml-2"><input type="checkbox" name="toppings" value="pico de gallo">Pico de
            Gallo</label>
          <label class="checkbox-inline ml-2"><input type="checkbox" name="toppings" value="tomatoes">Tomatoes</label>
        </div>
        <button class="btn btn-success align-center" type="submit">Taco ME!!!</button>
      </form>
    </div>
    <div class="col-md-3 align-center order-3">
      <h2 class="py-3">Orders already picked up</h2>
      {{#each tacos}}
        {{#if this.picked_up}}
          <div class="bg-danger text-white text-center mb-3 rounded-pill">
            <p>{{this.main_ingredient}} taco in a {{this.shell_type}} torilla with </p>
            <p>{{this.cheese}} and {{this.toppings}}</p>
            <p><strong>Picked up by {{this.name}}</strong></p>
          </div>          
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>